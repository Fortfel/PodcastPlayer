{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": [
    "NODE_ENV",
    "SERVER_PORT",
    "SERVER_URL",
    "SERVER_API_PATH",
    "CLIENT_URL",
    "RATE_LIMIT_MAX",
    "RATE_LIMIT_WINDOW",
    "CORS_ORIGIN"
  ],
  "globalPassThroughEnv": ["CI", "npm_lifecycle_event"],
  "tasks": {
    "transit": {
      "dependsOn": ["^transit"]
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".cache/tsbuildinfo.json", "dist/**"]
    },
    "dev": {
      "dependsOn": ["^dev"],
      "cache": false,
      "persistent": false
    },
    "start": {
      "dependsOn": ["^build"]
    },
    "lint": {
      "dependsOn": ["transit", "^build"],
      "outputs": [".cache/.eslintcache"]
    },
    "typecheck": {
      "dependsOn": ["transit", "^build"],
      "outputs": [".cache/tsbuildinfo.json"]
    },
    "format": {
      "outputs": [".cache/.prettiercache"],
      "outputLogs": "new-only"
    },
    "ui-add": {
      "cache": false,
      "interactive": true
    }
  }
}
