    "@tanstack/react-store": "catalog:",
    "@tanstack/react-virtual": "catalog:",
    "@tanstack/zod-adapter": "catalog:",
    "@workspace/api": "workspace:*",
    "html-react-parser": "^5.2.10",
    "lucide-react": "catalog:",
