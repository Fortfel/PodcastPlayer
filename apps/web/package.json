{
  "name": "web",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --configLoader runner",
    "build": "tsc -b && vite --configLoader runner build",
    "preview": "vite --configLoader runner preview",
    "lint": "eslint . --max-warnings 0",
    "typecheck": "tsc --noEmit --project tsconfig.app.json && tsc --noEmit --project tsconfig.node.json",
    "format": "prettier --check . --ignore-path ../../.gitignore --ignore-path .prettierignore",
    "ui-add": "pnpm dlx shadcn@canary add && prettier '../../packages/ui/**/*.{ts,tsx}' './**/*.{ts,tsx}' --write --list-different"
  },
